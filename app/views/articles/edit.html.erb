<h1>Edit Article</h1>

<% if @article.errors.any? %>
<h2>The following errors prevented the article from being created.</h2>
<ul>
  <% @article.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to 'Back to articles listing', articles_path %></p>